---
interface Props {
  color?: string;
}

const { color = "#ffffff" } = Astro.props;
---

<div class="grain-background">
  <div
    class="absolute inset-0 bg-gradient-to-br"
    style={`background: linear-gradient(to bottom right, var(--color-primary), ${color})`}
  >
  </div>
  <div
    class="absolute inset-0 mix-blend-multiply opacity-50"
    style={{
      backgroundImage:
        "url('data:image/svg+xml;base64,')",
      backgroundRepeat: "repeat",
    }}
  >
  </div>
  <div class="relative z-10 h-full">
    <slot />
  </div>
</div>

<style>
  .grain-background {
    position: relative;
    isolation: isolate;
    width: 100%;
    height: 100%;
    min-height: inherit;
    border-radius: 0.75rem 0.75rem 0 0;
    overflow: hidden;
  }
</style>
